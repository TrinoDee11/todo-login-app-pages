<%- include('../partials/header') %>

<div class="container mt-5">
  <!-- Header with user greeting -->
  <div class="d-flex justify-content-between align-items-center mb-4 animate__animated animate__fadeInDown">
    <h2 class="fw-bold text-gradient mb-0">
      <i class="fas fa-user-circle me-2"></i>Hello, <%= user %>! 
      <small class="d-block text-muted fs-6 mt-1">Your To-Do List</small>
    </h2>
    <a href="/logout" class="btn btn-outline-danger btn-sm">
      <i class="fas fa-sign-out-alt me-1"></i>Logout
    </a>
  </div>

  <!-- Add Task Form -->
  <form action="/add" method="POST" class="mb-4 shadow-sm animate__animated animate__fadeIn animate-delay-1">
    <div class="input-group">
      <input type="text" name="title" class="form-control form-control-lg border-primary" 
             placeholder="What needs to be done?" required>
      <button type="submit" class="btn btn-primary btn-lg">
        <i class="fas fa-plus me-2"></i>Add Task
      </button>
    </div>
  </form>

  <!-- Task List -->
  <ul class="list-group animate__animated animate__fadeIn animate-delay-2">
    <% if (tasks.length === 0) { %>
      <li class="list-group-item text-center py-4 text-muted">
        <i class="fas fa-clipboard-list fa-3x mb-3"></i>
        <h5>No tasks yet</h5>
        <p class="mb-0">Add your first task above!</p>
      </li>
    <% } %>

    <% tasks.forEach(task => { %>
      <li class="list-group-item d-flex align-items-center <%= task.completed ? 'bg-light' : '' %>">
        <div class="flex-grow-1">
          <span class="<%= task.completed ? 'text-decoration-line-through text-muted' : 'fw-semibold' %>">
            <i class="fas <%= task.completed ? 'fa-check-circle text-success me-2' : 'fa-circle-notch text-primary me-2' %>"></i>
            <%= task.title %>
          </span>
          <% if (task.completed) { %>
            <small class="text-muted ms-2"><%= new Date(task.completedAt).toLocaleString() %></small>
          <% } %>
        </div>
        
        <div class="btn-group btn-group-sm">
          <% if (!task.completed) { %>
            <form action="/complete/<%= task.id %>" method="POST" class="me-1">
              <button type="submit" class="btn btn-success" title="Mark complete">
                <i class="fas fa-check"></i>
              </button>
            </form>
          <% } %>
          
          <form action="/delete/<%= task.id %>" method="POST">
            <button type="submit" class="btn btn-danger" title="Delete">
              <i class="fas fa-trash-alt"></i>
            </button>
          </form>
        </div>
      </li>
    <% }) %>
  </ul>
</div>

<style>
  .text-gradient {
    background: linear-gradient(45deg, #4e54c8, #8f94fb);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
  }
  
  .list-group-item {
    transition: all 0.3s ease;
  }
  
  .list-group-item:hover {
    transform: translateX(5px);
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
  }
  
  .animate-delay-1 { animation-delay: 0.2s; }
  .animate-delay-2 { animation-delay: 0.4s; }
</style>

<%- include('../partials/footer') %>